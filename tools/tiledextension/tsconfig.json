{
	"compilerOptions": {
		"outDir": "./build",
		"target": "ES6",
		"module": "commonjs",
		"strict": true,
		"skipLibCheck": true,
		"removeComments": true,
		"declaration": false,
		"isolatedModules": false,
		"preserveConstEnums": false,
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"node_modules"
	]
}
